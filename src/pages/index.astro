---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Timeline from "../components/Timeline.astro";
import Courses from "../components/Courses.astro";
import Nociones from "../components/Nociones.astro";
import Experiences from "../components/Experiences.astro";
import Rejuvenation from "../components/Rejuvenation.astro";
import Testimonials from "../components/Testimonials.astro";
import Reflections from "../components/Reflections.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/logo_color.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Jessica Quiróz | Tu Guía hacia el Interior</title>
		<meta
			name="description"
			content="Sanación energética, rejuvenecimiento facial y corporal. Sesiones personalizadas, cursos y talleres para transformar tu bienestar desde el interior."
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Montserrat:wght@300;400;500;600&display=swap"
			rel="stylesheet"
		/>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
	</head>
	<body>
		<div id="inicio"></div>
		<Header />
		<main class="pt-20">
			<Hero />
			<Timeline />
			<Courses />
			<Nociones />
			<Experiences />
			<Rejuvenation />
			<Testimonials />
			<Reflections />
			<Contact />
		</main>
		<Footer />
	</body>
</html>

